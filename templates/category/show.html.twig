{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Wording</th>
                <td>{{ category.wording }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>  <img class="img-fluid m-3 align-self-center" width="150" height="150" src="{{ asset('uploads/' ~ category.image) }}" alt="affiche {{category.wording}}"></td>

            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">back to list</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
