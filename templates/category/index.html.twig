{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Wording</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.wording }}</td>
                <td>  <img class="img-fluid m-3 align-self-center" width="150" height="150" src="{{ 'http://localhost/nftMarketplace/uploads/' ~ category.image }}" alt"affiche {{category.wording}}"></td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Mettre à jour</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn btn-success">Créer une nouvelle Catégorie</a>
{% endblock %}
