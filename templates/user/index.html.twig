{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1> Liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Avatar</th>
                <th>Total des Ventes</th>
                <th>Total des créations</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>  <img class="img-fluid m-3 align-self-center" width="150" height="150" src="{{ 'http://localhost/nftMarketplace/uploads/' ~ user.avatar }}" alt"affiche {{user.username}}"></td>
                <td>{{ user.totalSales }}</td>
                <td>{{ user.artworksCount }}</td>
                <td>{{ user.description }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Mettre à jour</a>
                    <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Créer un nouveau utilisateur</a>
{% endblock %}
