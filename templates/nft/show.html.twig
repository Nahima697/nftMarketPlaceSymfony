{% extends 'base.html.twig' %}

{% block title %}Nft{% endblock %}

{% block body %}
    <h1>Nft</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nft.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ nft.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                <td>
                    <img class="img-fluid m-3 align-self-center" width="150" height="150" src="http://localhost/nftMarketplace/uploads/{{ nft.image }}" alt="Affiche {{ nft.name }}">
                </td>
                </td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ nft.quantity }}</td>
            </tr>
            <tr>
                <th>DropDate</th>
                <td>{{ nft.dropDate ? nft.dropDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ nft.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ nft.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_nft_index') }}">back to list</a>

    <a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>

    {{ include('nft/_delete_form.html.twig') }}
{% endblock %}
